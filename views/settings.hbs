	<div class="container text-center m-3 p-0">
		<div class="row row-cols-12 navBeers">
			<!-- logo -->
			<div class="col">
				<a href="./">
					<img src="https://i.pinimg.com/736x/4f/be/f3/4fbef3d62f8ddd46d70d96a2256f14d1.jpg" alt="logo" class="logo">
				</a>
			</div>
			<!-- home btn -->
