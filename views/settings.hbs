				<a href="./">
					<button type="button" class="btn top btn-light p-2 mt-2">Return Home</button>
				</a>
			</div>
			<!-- create beer -->
			<div class="col">
				<a href="./create">
					<button type="button" class="btn top btn-light p-2 mt-2">Create Beer</button>
